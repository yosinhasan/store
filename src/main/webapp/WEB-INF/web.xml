<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
		<location>/WEB-INF/jsp/error.jsp</location>
	</error-page>
	<listener>
		<listener-class>com.epam.pp.hasan.web.listener.InitListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>captcha</servlet-name>
		<servlet-class>com.epam.pp.hasan.web.servlet.CaptchaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>captcha</servlet-name>
		<url-pattern>/captcha</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>captchaMethod</param-name>
		<param-value>session</param-value>
	</context-param>
	<context-param>
		<param-name>captchaLifeTime</param-name>
		<param-value>60</param-value>
	</context-param>
	<context-param>
		<param-name>imagePath</param-name>
		<param-value>/images/</param-value>
	</context-param>
	<context-param>
		<param-name>securityFilePath</param-name>
		<param-value>/WEB-INF/security/security.xml</param-value>
	</context-param>
	<context-param>
		<param-name>productsOnPage</param-name>
		<param-value>3</param-value>
	</context-param>
	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.fallbackLocale</param-name>
		<param-value>en</param-value>
	</context-param>
	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
		<param-value>language</param-value>
	</context-param>
	<context-param>
		<param-name>localeMethod</param-name>
		<param-value>session</param-value>
	</context-param>
	<context-param>
		<param-name>localeCookieLifeTime</param-name>
		<param-value>3600</param-value>
	</context-param>

	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>com.epam.pp.hasan.web.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>AccessFilter</filter-name>
		<filter-class>com.epam.pp.hasan.web.filter.AccessFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AccessFilter</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>LanguageFilter</filter-name>
		<filter-class>com.epam.pp.hasan.web.filter.LanguageFilter</filter-class>
		<init-param>
			<param-name>available</param-name>
			<param-value>ru-RU en-US</param-value>
		</init-param>
		<init-param>
			<param-name>default</param-name>
			<param-value>en-US</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>LanguageFilter</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>GzipFilter</filter-name>
		<filter-class>com.epam.pp.hasan.web.filter.GZipServletFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>GzipFilter</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>NoCacheFilter</filter-name>
		<filter-class>com.epam.pp.hasan.web.filter.NoCacheFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>NoCacheFilter</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>

</web-app>